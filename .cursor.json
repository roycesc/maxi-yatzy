{
  "project": {
    "name": "maxi-yatzy",
    "type": "nextjs",
    "framework": "next.js",
    "version": "15.2.4",
    "language": "typescript",
    "styling": "tailwindcss"
  },
  "navigation": {
    "exclude": [
      "node_modules",
      ".next",
      ".git",
      "public"
    ],
    "include": [
      "src/**/*",
      "*.json",
      "*.ts",
      "*.tsx"
    ]
  },
  "editor": {
    "formatOnSave": true,
    "defaultFormatter": "prettier",
    "tabSize": 2,
    "insertSpaces": true
  },
  "typescript": {
    "tsconfigPath": "./tsconfig.json"
  },
  "linting": {
    "eslint": true,
    "prettier": true
  }
} 